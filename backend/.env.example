# ===========================================
# RAG Agent Platform - Environment Variables
# ===========================================
# Copy this file to .env and update the values
# Variables marked [REQUIRED] must be set

# App
APP_NAME=RAG Agent Platform
APP_ENV=development
DEBUG=true

# Database [REQUIRED]
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://ragagent:your_password_here@localhost:5432/ragagent

# LiteLLM
LITELLM_API_URL=http://localhost:4000
LITELLM_API_KEY=

# JWT [REQUIRED]
# Generate a secure key: python -c "import secrets; print(secrets.token_urlsafe(32))"
# Must be at least 32 characters
JWT_SECRET_KEY=CHANGE_ME_generate_with_secrets_token_urlsafe_32
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS (comma-separated or JSON array)
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# OpenTelemetry
OTEL_ENABLED=false
OTEL_SERVICE_NAME=rag-agent-backend
OTEL_EXPORTER_ENDPOINT=http://localhost:4317

# Redis (for rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379

# Stripe (optional - for payment features)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PUBLISHABLE_KEY=

# Storage
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=./uploads

# Embedding
EMBEDDING_MODEL=text-embedding-004
EMBEDDING_DIMENSION=768
